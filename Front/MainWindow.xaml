<Window
    x:Class="Front.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Front.Views"
    Title="MainWindow"
    Width="800"
    Height="500"
    MinWidth="800"
    MinHeight="500"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Name="PreGameTab" Header="Start Game">
                <views:PreGameView />
            </TabItem>
            <TabItem Name="GameTab" Header="Active Game">
                <views:GameView />
            </TabItem>
            <TabItem Name="EditQuizTab" Header="Edit Quiz">
                <views:EditQuizView />
            </TabItem>
            <TabItem Name="EditQuestionTab" Header="Add Question">
                <views:EditQuestionView />
            </TabItem>
            <TabItem Name="EditCategoryTab" Header="Create/Delete Category">
                <views:EditCategoryView />
            </TabItem>
            <TabItem Name="AddQuizTab" Header="Create/Delete Quiz">
                <views:AddQuizView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
